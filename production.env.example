# Production Environment Configuration for Mifumo SMS Backend
# Copy this file to production.env and update the values

# Django Core Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this
DJANGO_ALLOWED_HOSTS=104.131.116.55,196.249.97.239,localhost,127.0.0.1

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/mifumo_production

# Option 2: Use individual database settings
# DB_NAME=mifumo_production
# DB_USER=mifumo_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=https://mifumosms.servehttp.com,https://preview--mifumo-connect.lovable.app,http://104.131.116.55,http://104.131.116.55:8000,http://localhost:3000,http://127.0.0.1:3000,https://app.mifumo.com

# Base URL for webhooks and API calls
BASE_URL=http://104.131.116.55

# Security Settings (for HTTP - set to True for HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# API Settings
API_PAGINATION_SIZE=20
API_RATE_LIMIT=1000
API_MAX_PAGE_SIZE=100

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# Cache Settings
CACHE_TTL=300
CACHE_MAX_ENTRIES=1000
CACHE_CULL_FREQUENCY=3

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_FROM_NAME=Mifumo WMS
EMAIL_FROM_ADDRESS=noreply@mifumo.com

# SMS Provider - Beem Africa
BEEM_API_KEY=your-beem-api-key
BEEM_SECRET_KEY=your-beem-secret-key
BEEM_DEFAULT_SENDER_ID=MIFUMO
BEEM_API_TIMEOUT=30
BEEM_API_BASE_URL=https://apisms.beem.africa/v1
BEEM_SEND_URL=https://apisms.beem.africa/v1/send
BEEM_BALANCE_URL=https://apisms.beem.africa/public/v1/vendors/balance
BEEM_DELIVERY_URL=https://dlrapi.beem.africa/public/v1/delivery-reports
BEEM_SENDER_URL=https://apisms.beem.africa/public/v1/sender-names
BEEM_TEMPLATE_URL=https://apisms.beem.africa/public/v1/sms-templates

# Payment Integration - ZenoPay
ZENOPAY_API_KEY=your-zenopay-api-key
ZENOPAY_API_TIMEOUT=30
ZENOPAY_WEBHOOK_SECRET=your-zenopay-webhook-secret

# WhatsApp Integration (optional)
WA_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WA_TOKEN=your-whatsapp-token
WA_VERIFY_TOKEN=your-whatsapp-verify-token
WA_API_BASE=https://graph.facebook.com/v20.0

# Stripe Integration (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# AWS S3 Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
AWS_DEFAULT_ACL=private

# Logging
LOG_LEVEL=INFO

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn

# Business Information
COMPANY_NAME=Mifumo Labs
COMPANY_EMAIL=hello@mifumo.com
COMPANY_PHONE=+255700000000
COMPANY_ADDRESS=Dar es Salaam, Tanzania
SUPPORT_EMAIL=support@mifumo.com
SUPPORT_PHONE=+255700000001

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_SMS_FEATURES=True
ENABLE_WHATSAPP_FEATURES=True
ENABLE_BILLING_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_WEBHOOKS=True

# Notification Settings
SMS_NOTIFICATION_ENABLED=True
SMS_NOTIFICATION_SENDER_ID=NOTIFY
EMAIL_NOTIFICATION_ENABLED=True
EMAIL_NOTIFICATION_FROM=noreply@mifumo.com

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Cost and Limits
MAX_MESSAGE_LENGTH=160
MAX_BULK_MESSAGES=1000
MAX_CONTACTS_PER_TENANT=10000
SMS_COST_PER_MESSAGE=0.05
WHATSAPP_COST_PER_MESSAGE=0.01
FREE_MESSAGES_LIMIT=100

# Defaults
DEFAULT_TIMEZONE=Africa/Dar_es_Salaam
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
