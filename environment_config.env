# =============================================================================
# MIFUMO WMS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# =============================================================================

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# Django secret key - Generate a new one for production
DJANGO_SECRET_KEY=django-insecure-change-me-in-production-use-strong-random-key

# Debug mode - Set to False in production
DJANGO_DEBUG=True

# Allowed hosts - Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=.localhost,.mifumo.local,127.0.0.1,localhost,*.mifumo.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL - Use PostgreSQL in production
DATABASE_URL=postgres://mifumo_user:mifumo_password@localhost:5432/mifumo_wms

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for Celery and caching
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# WHATSAPP BUSINESS CLOUD API
# =============================================================================
# WhatsApp Business Cloud API credentials
WA_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WA_TOKEN=your-whatsapp-access-token
WA_VERIFY_TOKEN=your-whatsapp-verify-token
WA_API_BASE=https://graph.facebook.com/v20.0

